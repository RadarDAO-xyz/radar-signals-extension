{
    "manifest_version": 2,
    "name": "Radar Signal Sharing Extension",
    "version": "0.0.1",
    "browser_action": {
        "default_icon": {
            "192": "logo192.png"
        },
        "default_title": "Open the popup",
        "default_popup": "index.html"
    },
    "description": "Radar Signal Sharing Extension",
    "icons": {
        "192": "logo192.png"
    },
    "permissions": ["activeTab", "storage", "identity", "https://radar-signal-ext.herokuapp.com/"],
    "background": {
        "scripts": ["./background.js"]
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "addon@radardao.xyz"
        }
    }
}
